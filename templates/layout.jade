block vars

doctype html
html
  head
    meta(charset="utf-8")
    title= title
    meta(name="description", content=description)

    meta(name="HandheldFriendly", content="True")
    meta(name="MobileOptimized", content="480")
    meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
    meta(http-equiv="cleartype", content="on")

    meta(name="mobile-web-app-capable", content="yes")
    meta(name="mobile-web-app-title", content="Imaginary Smart Exhibits")

    link(rel="icon", sizes="64x64", href="/images/favicon-64.png")
    link(rel="icon", sizes="96x96", href="/images/favicon-96.png")
    link(rel="icon", sizes="192x192", href="/images/favicon-192.png")

    link(href='/global.css', rel='stylesheet')
    if room
      link(href='/' + room + '/' + type + '.css', rel='stylesheet')
    // link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,300,700,400italic', rel='stylesheet')
    block styles

  body
    block content

    script(src='/polyfill.js')
    block scripts
    if room
      script window.SE = { room: '#{room}' };
      script(src='/' + type + '.js')
      script(src='/' + room + '/' + type + '.js')
